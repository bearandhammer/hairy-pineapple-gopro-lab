    <ContentPage.Resources>
        <Color x:Key="Primary">#15AF97</Color>
        <Color x:Key="Secondary">#83D0F5</Color>
        <Color x:Key="Tertiary">#B5DC18</Color>
        <Color x:Key="White">White</Color>
        <Color x:Key="Black">Black</Color>
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="BackgroundColor" Value="{ StaticResource Primary }"></Setter>
            <Setter Property="Stroke" Value="{ StaticResource Secondary }"></Setter>
            <Setter Property="StrokeThickness" Value="2"></Setter>
            <Setter Property="Padding" Value="10"></Setter>
        </Style>
        <Style TargetType="Image" x:Key="UserImage">
            <Setter Property="HeightRequest" Value="50"></Setter>
            <Setter Property="Source" Value="user_light.png"></Setter>
        </Style>
        <Style TargetType="Label" x:Key="TitleLabel">
            <Setter Property="FontAttributes" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="TextColor" Value="{ StaticResource White }" />
        </Style>
        <Style TargetType="Line" x:Key="LineDivider">
            <Setter Property="Stroke" Value="{ StaticResource Tertiary }" />
            <Setter Property="X2" Value="200" />
        </Style>
        <Style TargetType="Label" x:Key="DescriptionLabel">
            <Setter Property="TextColor" Value="{ StaticResource White }" />
        </Style>
    </ContentPage.Resources>
    
